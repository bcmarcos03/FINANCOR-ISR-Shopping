<mvc:View
    controllerName="com.financor.sd.shoppingapp.controller.Collect.DivisionList"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    displayBlock="true">

    <Page
        id="divisionListPage"
        title="2. DivisÃµes/{viewModel>/competitorName}"
        showNavButton="true"
        navButtonPress="onNavBack">

         <customHeader>
            <Bar>
                <contentLeft>
                    <Button 
                        icon="sap-icon://nav-back" 
                        press=".onNavBack" 
                        tooltip="{i18n>BackTooltip}" 
                    />
                    <Button 
                        icon="sap-icon://home" 
                        press=".onNavToHome" 
                        tooltip="{i18n>HomeTooltip}" 
                        type="Transparent"
                    />
                </contentLeft>
                <contentMiddle>
                    <Title text="{i18n>DivisionTitle}" />
                </contentMiddle>
                <contentRight>
                </contentRight>
            </Bar>
        </customHeader>

        <content>
            <List
                id="idListaGenerica"  
                items="{listModel>/ListData}"
                mode="SingleSelectMaster"
                selectionChange="onDivisionSelect">
                
                <StandardListItem
                    title="{listModel>Division}"  description="{listModel>DivisionText}" type="Navigation"
                    
                    info="{listModel>numberOfProducts}" 
                    infoState="None" 
                />
            </List>
        </content>
    </Page>
</mvc:View>