<mvc:View
    controllerName="com.financor.sd.shoppingapp.controller.Collect.CategoryList"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    displayBlock="true">

    <Page
        id="categoryListPage"
        title="4. Categorias - {viewModel>/competitorName}"
        showNavButton="true"
        navButtonPress="onNavBack">

        <customHeader>
            <Bar>
                <contentLeft>
                    <Button 
                        icon="sap-icon://nav-back" 
                        press=".onNavBack" 
                        tooltip="{i18n>BackTooltip}" 
                    />
                    <Button 
                        icon="sap-icon://home" 
                        press=".onNavToHome" 
                        tooltip="{i18n>HomeTooltip}" 
                        type="Transparent"
                    />
                </contentLeft>
                <contentMiddle>
                    <Title text="{i18n>CategoryTitle}" />
                </contentMiddle>
                <contentRight>
                    <Button
                        id="createProductButtonCategoryList"
                        icon="sap-icon://add-product"
                        press=".onCreateProductPress"
                        tooltip="{i18n>CreateProductTooltip}"
                        type="Transparent" />
                    <Button
                        id="barcodeScanButtonCategoryList"
                        icon="sap-icon://bar-code"
                        press=".onBarcodeScanPress"
                        tooltip="{i18n>BarcodeScanTooltip}"
                        type="Emphasized" />
                </contentRight>
            </Bar>
        </customHeader>

        <content>
            <List
                id="idListaGenerica"
                items="{listModel>/ListData}"
                mode="SingleSelectMaster"
                selectionChange="onCategorySelect">
                
                <StandardListItem
                    title="{listModel>Category}" 
                    description="{listModel>CategoryText}" 
                    type="Navigation"                
                    info="{listModel>numberOfProducts}" 
                    infoState="None" 
                />
            </List>
        </content>

        <dependents>
            <core:Fragment fragmentName="com.financor.sd.shoppingapp.view.fragments.BarcodeScanner" type="XML"/>
        </dependents>
    </Page>
</mvc:View>