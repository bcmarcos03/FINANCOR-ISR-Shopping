<mvc:View
    controllerName="com.financor.sd.shoppingapp.controller.Collect.ProductList"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    displayBlock="true"
>
    <Page
        id="productListMainPage"
        title="5. Coleta de PreÃ§os - {viewModel>/competitorName}"
        showNavButton="true"
        navButtonPress="onNavBack"
    >
        <customHeader>
            <Bar>
                <contentLeft>
                    <Button
                        icon="sap-icon://nav-back"
                        press=".onNavBack"
                        tooltip="{i18n>BackTooltip}"
                    />
                    <Button
                        icon="sap-icon://home"
                        press=".onNavToHome"
                        tooltip="{i18n>HomeTooltip}"
                        type="Transparent"
                    />
                </contentLeft>
                <contentMiddle>
                    <Title text="{i18n>ProductTitle}" />
                </contentMiddle>
                <contentRight>
                    <Button
                        id="createProductButton"
                        icon="sap-icon://add-product"
                        press=".onCreateProductPress"
                        tooltip="{i18n>CreateProductTooltip}"
                        type="Transparent" />
                    <Button
                        id="barcodeScanButton"
                        icon="sap-icon://bar-code"
                        text="Scan"
                        press=".onBarcodeScanPress"
                        tooltip="{i18n>BarcodeScanTooltip}"
                        type="Emphasized" />
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <Table
                id="idProductsTable"
                inset="true"
                popinLayout="GridLarge"
                items="{
				    path: 'listModel>/ListData',
                    sorter: {
                      path: 'MaterialName' }
			    }"
            >
                <columns>
                    <Column>
                        <Text text="Products" />
                    </Column>
                    <Column>
                        <Text text="Customer Name" />
                    </Column>
                </columns>
                <ColumnListItem 
                    vAlign="Middle" 
                    type="Active"
                    press=".onCollectPricePress">
                    <cells>
                        <ObjectIdentifier
                            title="{listModel>MaterialDescription}"
                            text="{listModel>Product}"
                        />
                        
                        <ObjectAttribute
                            text="{listModel>MaterialNameCustomer}"
                        />                                                    
                    </cells>
                </ColumnListItem>
            </Table>
        </content>

        <dependents>
            <core:Fragment fragmentName="com.financor.sd.shoppingapp.view.fragments.BarcodeScanner" type="XML"/>
        </dependents>
    </Page>
</mvc:View>
