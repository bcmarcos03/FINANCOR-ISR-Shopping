<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout">

    <Popover
        id="userCardPopover"
        title="Detalhes do Colaborador"
        class="sapUiContentPadding"
        placement="Bottom"
        contentWidth="300px"
    >
        <!-- O Popover usa o modelo 'userCardModel' que Ã© preenchido no controller -->
        <l:VerticalLayout width="100%">
            <!-- Nome e Cargo (Header) -->
            <Avatar
                src="{path: 'userCardModel>/iconSrc', formatter: '.formatSrc'}"
                displaySize="L"
                initials="{= ${userCardModel>/FullName}.substring(0, 1) }"
                class="sapUiTinyMarginBottom sapUiTinyMarginTop"
            />
            <Title 
                text="{userCardModel>/FullName}" 
                level="H4" 
                class="sapUiTinyMarginBottom"
            />
            <Text 
                text="{userCardModel>/JobTitle} ({userCardModel>/Department})"
                class="sapUiTinyMarginBottom"
            />


        </l:VerticalLayout>
    </Popover>
</core:FragmentDefinition>